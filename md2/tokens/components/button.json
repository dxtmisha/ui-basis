{
  "padding": "{ref.spacing.4}",
  "height": {
    "sm": "{ref.spacing.7}",
    "md": "{ref.spacing.9}",
    "lg": "{ref.spacing.12}"
  },
  "font": "{font.button}",
  "color": "{mixin.color.primary}",
  "background-color": "transparent",
  "gradient": "{mixin.gradient.primary}",
  "border-radius": "{sys.rounded.standard}",
  "box-shadow": "none",
  "transition-property": "border, box-shadow",
  "transition": "{mixin.transition.state}",
  "label": {
    "padding-left": "{??padding}",
    "padding-right": "{??padding}",
    "text-overflow": "truncate",
    "transition-property": "opacity",
    "transition-function": "{d.sys.transitionFunction.standard}"
  },
  "dragged": {
    "box-shadow": "{ref.shadow.8}"
  },
  "progress": {
    "color-opacity": "{sys.opacity.disabled}"
  },
  "disabled": {
    "basic": "{mixin.color.disabled}",
    "box-shadow": "none"
  },
  "text": {
    "padding": "{ref.spacing.2}",
    "after": "{mixin.border.outlinedActive}"
  },
  "outlined": {
    "before": "{mixin.border.outlined}",
    "after": "{mixin.border.outlinedActive}"
  },
  "contained": {
    "color": "{mixin.color.onPrimary}",
    "background-color": "{mixin.background.primary}",
    "gradient": "{sys.palette.onPrimary}",
    "box-shadow": "{ref.shadow.2}",
    "active": {
      "box-shadow": "{ref.shadow.8}"
    },
    "disabled": {
      "color": "{mixin.color.onDisabled}",
      "background-color": "{mixin.background.disabled}",
      "box-shadow": "none"
    }
  }
}
