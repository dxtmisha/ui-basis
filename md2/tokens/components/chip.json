{
  "padding": "{ref.spacing.3}",
  "height": {
    "sm": "{ref.spacing.6}",
    "md": "{ref.spacing.8}",
    "lg": "{ref.spacing.9}"
  },
  "font": "{font.body2}",
  "color": "{mixin.color.onSurface}",
  "background-color": "{mixin.background.overlay}",
  "gradient": "{mixin.gradient.onSurface}",
  "border-radius": "{sys.rounded.full}",
  "box-shadow": "none",
  "transition-property": "border, box-shadow",
  "transition": "{mixin.transition.state}",
  "after": "{mixin.border.outlinedActive}",
  "#label": {
    "label": "{?button.label}"
  },
  "#trailing": {
    "font-size": "{ref.font.size.sm}"
  },
  "active": {
    "box-shadow": "{ref.shadow.2}"
  },
  "dragged": {
    "elevation": "{elevation.8}"
  },
  "selected": {},
  "progress": {
    "color-opacity": "{sys.opacity.disabled}"
  },
  "disabled": {
    "basic": "{mixin.color.disabled}",
    "box-shadow": "none"
  },
  "outlined": {
    "background-color": "transparent",
    "before": "{mixin.border.outlined}",
    "focus": {
      "before": {
        "border-opacity": "{sys.opacity.surface.high}"
      }
    }
  },
  "input": {},
  "filter": {},
  "choice": {
    "selected": {
      "color": "{sys.palette.primary}",
      "background-color": "{sys.palette.primary}",
      "gradient": "{sys.palette.primary}"
    }
  },
  "action": {}
}
