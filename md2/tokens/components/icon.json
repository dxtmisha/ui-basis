{
  "rounded": {
    "border-radius": "{rounded}"
  },
  "size": {
    "xs": {
      "width": "{ref.spacing.6}"
    },
    "sm": {
      "width": "{ref.spacing.8}"
    },
    "md": {
      "width": "{ref.spacing.10}",
      "font": "{font.headline5}"
    },
    "lg": {
      "width": "{ref.spacing.14}",
      "font": "{font.headline4}",
      "rounded": "{rounded.standard}"
    },
    "xl": {
      "width": "{ref.spacing.25}",
      "aspect-ratio-width": "25/14",
      "font": "{font.headline3}",
      "rounded": "{rounded.none}"
    }
  },
  "overlay": {
    "background-opacity": "{sys.opacity.pressed}"
  },
  "dynamic": {
    "hover": {
      "gradient-opacity": "{sys.opacity.hover}"
    },
    "active": {
      "gradient-opacity": "{sys.opacity.dragged}"
    },
    "focus": {
      "gradient-opacity": "{sys.opacity.focus}"
    }
  }
}
