{
  "padding": "{ref.spacing.3}",
  "height": {
    "sm": "{ref.spacing.6}",
    "md": "{ref.spacing.8}",
    "lg": "{ref.spacing.9}"
  },
  "font": "{font.labelLarge}",
  "color": "{sys.palette.onSurfaceVariant}",
  "background-color": "transparent",
  "gradient": "{sys.palette.onSurfaceVariant}",
  "gradient-opacity": "0",
  "border-radius": "{sys.rounded.md}",
  "box-shadow": "none",
  "transition-property": "border, box-shadow, opacity",
  "transition-duration": "{d.sys.transitionDuration.lg.close}",
  "transition-function": "{d.sys.transitionFunction.standard}",
  "before": {
    "basic": "{?button.outlined.before}",
    "transition": "inherit"
  },
  "#icon": {
    "color": "{sys.palette.primary}"
  },
  "hover": {
    "gradient-opacity": "{sys.opacity.008}"
  },
  "focus": {
    "gradient-opacity": "{sys.opacity.012}"
  },
  "active": {
    "basic": "{?button.outlined.active}",
    "gradient-opacity": "{sys.opacity.012}"
  },
  "dragged": {
    "gradient-opacity": "{sys.opacity.016}",
    "box-shadow": "{ref.shadow.3}",
    "transition-duration": "{d.sys.transitionDuration.sm}"
  },
  "selected": {
    "background-color": "{sys.palette.secondaryContainer}",
    "gradient": "{sys.palette.onSecondaryContainer}",
    "before": {
      "opacity": "0",
      "transition-duration": "{d.sys.transitionDuration.sm}"
    }
  },
  "progress": {
    "color-opacity": "{sys.opacity.disabled}"
  },
  "disabled": {
    "color": "{sys.palette.onSurface}",
    "color-opacity": "{sys.opacity.disabled}",
    "box-shadow": "none",
    "transition-duration": "{d.sys.transitionDuration.sm}",
    "#icon": {
      "color": "inherit"
    }
  },
  "elevated": {
    "background-color": "{sys.palette.surfaceContainerLow}",
    "box-shadow": "{ref.shadow.1}",
    "before": {
      "display": "none"
    },
    "active": {
      "box-shadow": "{ref.shadow.2}"
    },
    "disabled": {
      "background-color": "{sys.palette.onSurfaceVariant}",
      "background-opacity": "{sys.opacity.012}"
    }
  },
  "assist": {
    "dragged": {
      "box-shadow": "none"
    },
    "elevated": {
      "dragged": {
        "box-shadow": "{ref.shadow.2}"
      }
    }
  }
}
