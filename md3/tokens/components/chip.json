{
  "padding": "{ref.spacing.3}",
  "height": {
    "sm": "{ref.spacing.6}",
    "md": "{ref.spacing.8}",
    "lg": "{ref.spacing.9}"
  },
  "font": "{font.labelLarge}",
  "color": "{sys.palette.onSurfaceVariant}",
  "background-color": "transparent",
  "gradient": "{mixin.gradient.onSurfaceVariant}",
  "border-radius": "{sys.rounded.md}",
  "box-shadow": "none",
  "transition-property": "border, box-shadow, opacity",
  "transition-duration": "{mixin.transition.state}",
  "before": "{mixin.border.outlined}",
  "#label": {
    "basic": "{?button.label}"
  },
  "#icon": {
    "color": "{sys.palette.primary}"
  },
  "dragged": {
    "gradient-opacity": "{sys.opacity.016}",
    "box-shadow": "{ref.shadow.3}",
    "transition-duration": "{d.sys.transitionDuration.sm}"
  },
  "selected": {
    "background-color": "{sys.palette.secondaryContainer}",
    "gradient": "{sys.palette.onSecondaryContainer}",
    "before": {
      "opacity": "0",
      "transition-duration": "{d.sys.transitionDuration.sm}"
    }
  },
  "progress": {
    "color-opacity": "{sys.opacity.disabled}"
  },
  "disabled": {
    "color": "{mixin.color.onDisabled}",
    "box-shadow": "none",
    "#icon": {
      "color": "inherit"
    }
  },
  "avatar": {
    "border-radius": "{sys.rounded.full}",
    "#icon": {
      "color": "inherit"
    }
  },
  "elevated": {
    "background-color": "{sys.palette.surfaceContainerLow}",
    "box-shadow": "{ref.shadow.1}",
    "before": {
      "display": "none"
    },
    "active": {
      "box-shadow": "{ref.shadow.2}"
    },
    "dragged": {
      "box-shadow": "{ref.shadow.3}"
    },
    "selected": {
      "background-color": "{sys.palette.secondaryContainer}",
      "gradient": "{sys.palette.onSecondaryContainer}"
    },
    "disabled": {
      "background-color": "{sys.palette.onSurfaceVariant}",
      "background-opacity": "{sys.opacity.012}"
    }
  },
  "input": {},
  "assist": {
    "dragged": {
      "box-shadow": "none"
    },
    "elevated": {
      "dragged": {
        "box-shadow": "{ref.shadow.2}"
      }
    }
  },
  "filter": {
    "dragged": {
      "box-shadow": "{ref.shadow.4}"
    },
    "selected": {
      "#icon": {
        "color": "inherit"
      }
    },
    "elevated": {
      "hover": {
        "box-shadow": "{ref.shadow.2}"
      },
      "active": {
        "box-shadow": "{ref.shadow.1}"
      },
      "dragged": {
        "box-shadow": "{ref.shadow.4}"
      }
    }
  },
  "suggestion": {}
}
